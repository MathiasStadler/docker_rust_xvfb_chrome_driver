    mkdir ${HOME}/rust_playground && \
    cd ${HOME}/rust_playground && \
    cargo init "." && \
    cargo build && \
    cargo run

# copy bootstrap.sh
RUN mkdir -p /opt
COPY /bootstrap.sh /opt



CMD ["/bin/bash","/opt/bootstrap.sh"]

