# clean up
RUN apt-get autoremove -y \
    && apt-get clean -y \
    && apt-get autoclean -y \
    && rm -rf /var/lib/apt/lists/*

ENV HOME /home/$USER
WORKDIR /home/$USER

RUN mkdir /home/$USER/.fluxbox
COPY /startup /home/$USER/.fluxbox/startup
RUN chmod +x /home/$USER/.fluxbox/startup
RUN chown -R $USER:$USER /home/$USER

USER ${USER}

